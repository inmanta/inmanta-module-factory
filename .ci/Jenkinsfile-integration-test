pipeline {
    agent any

    triggers {
        cron(BRANCH_NAME == "master" ? "H H(2-5) * * *": "")
    }

    environment {
        REPO_NAME="inmanta-module-factory"
        PIP_INDEX_URL='https://artifacts.internal.inmanta.com/inmanta/dev'
    }

    options {
        disableConcurrentBuilds()
        checkoutToSubdirectory(env.REPO_NAME)
        skipDefaultCheckout()
    }

    stages {
        stage("Poetry install") {
            steps {
                dir(env.REPO_NAME) {
                    script {
                        sh '${WORKSPACE}/env/bin/poetry install'
                    }
                }
            }
        }

        stage('Setup') {
          steps {
            sh '''
              rm -rf ${WORKSPACE}/env
              python3 -m venv ${WORKSPACE}/env
              . ${WORKSPACE}/env/bin/activate
              make install
            '''
          }
        }

        stage('Tests') {
          steps {
            sh '''
              . ${WORKSPACE}/env/bin/activate
              pytest \
                --junitxml=junit.xml \
                --log-cli-level DEBUG \
                --basetemp=${WORKSPACE}/tmp \
                -s -vvv \
                tests
            '''
            junit "junit.xml"
          }
        }

        stage('Code linting') {
          steps {
            sh'''
              . ${WORKSPACE}/env/bin/activate
              make pep8
            '''
          }
        }

        stage('Code static typing check') {
          steps {
            sh'''
              . ${WORKSPACE}/env/bin/activate
              make mypy
            '''
          }
        }
    }
}
